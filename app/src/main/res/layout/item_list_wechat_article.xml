<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16">

    <RelativeLayout
        android:id="@+id/vg_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toLeftOf="@+id/iv_pic"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="3"
            android:textColor="@color/color_text_first"
            android:textSize="@dimen/sp_14"
            tools:text="吴永宁坠亡前要拍8万元视频 邻居:他把母亲看很重吴永宁坠亡前要拍8万元视频 邻居:他把母亲看很重吴永宁坠亡前要拍8万元视频 邻居:他把母亲看很重" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@color/color_image"
            android:scaleType="centerCrop"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vg_top"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_third"
            android:textSize="@dimen/sp_12"
            tools:text="丛林王者" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:singleLine="true"
            android:text="0评论"
            android:textColor="@color/color_text_third"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/color_text_third"
            android:textSize="@dimen/sp_12"
            tools:text="2017-12-16 12:08" />

        <TextView
            android:id="@+id/tv_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_favorite_border_gray_16dp"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_4"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_text_third"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_read_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_visibility_gray_16dp"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_16"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_text_third"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/vg_bottom"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/color_line" />
</RelativeLayout>