<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

         true：布局扩展至系统状态栏，配合android:fitsSystemWindows="true"，根布局上加状态栏的padding
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item> <!-- 导航栏 true：透明 -->

        <!--&lt;!&ndash; These values must be set for this mechanism to work &ndash;&gt;-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="md_dark_theme">@bool/md_dark_theme</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        true：布局扩展至系统状态栏，配合android:fitsSystemWindows="true"，根布局上加状态栏的padding
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item> <!-- 导航栏 true：透明 -->

        <item name="md_dark_theme">@bool/md_dark_theme</item>
    </style>
</resources>
